{
    "index_name": "LoM_wiki",
    "start_urls": ["https://smilin.net/LoM-wiki/"],
    "sitemap_urls": ["https://smilin.net/LoM-wiki/sitemap.xml"],
    "sitemap_alternate_links": true,
    "stop_urls": ["https://smilin.net/LoM-wiki/develop.*",
                  "https://smilin.net/LoM-wiki/other/test$",
                  "https://smilin.net/LoM-wiki/other/test.html$"],
    "selectors": {
      "lvl0": {
        "selector": ".sidebar-heading.active, .VPNavBarMenuLink.active, .VPNavBarMenuGroup .VPNavBarMenuGroupButton.active",
        "global": true,
        "default_value": "Documentation"
      },
      "lvl1": ".content h1",
      "lvl2": ".content h2",
      "lvl3": ".content h3",
      "content": ".content p, .content li",
      "lang": {
        "selector": "/html/@lang",
        "type": "xpath",
        "global": true
      }
    },
    "custom_settings": {
      "attributesForFaceting": ["lang"],
      "attributesToRetrieve": [
        "hierarchy",
        "content",
        "anchor",
        "url"
      ],
      "attributesToSnippet": ["content:10"],
      "attributesToHighlight": ["content"]
    },
    "strip_chars": " .,;:#",
    "scrape_start_urls": false
  }